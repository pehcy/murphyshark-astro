---
import ThemeToggle from "./ThemeToggle.astro";
const gutter: string = "clamp(1rem, 0.73rem + 1.36vw, 1.875rem)";
const spaceS: string = "clamp(1rem, 0.92rem + 0.39vw, 1.25rem)";

const currentYear: number = new Date().getFullYear();
---
<style define:vars={{ gutter, spaceS }}>
  .site-foot {
    top: 100vh;
    position: sticky;
    background: var(--color-blue-subdued);
    color: #f5f3ff;
    padding: clamp(.625rem, .41rem + 1.06vw, 1.3125rem);
  }

  .mt-l-xl {
    margin-top: clamp(1.1875rem, .48rem + 3.56vw, 3.5rem);
  }

  .foot-wrapper {
    margin-inline: auto;
    max-inline-size: 85rem;
    padding-inline: var(--gutter);
  }

  .site-foot__inner {
    align-items: center;
    display: flex;
    gap: var(--spaceS);
    justify-content: center;
  }

  .site-foot__inner a:not([class]) {
    color: currentColor;
  }

  .site-foot svg {
    block-size: .9em;
    inline-size: .9em;
  }

  .sr-only {
    clip: rect(0, 0, 0, 0);
    border-width: 0;
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  .text-step-0 {
    font-size: clamp(0.9375rem, .86rem + .39vw, 1.1875rem);
  }
</style>

<footer class="site-foot mt-l-xl">
  <div class="foot-wrapper">
    <div class="site-foot__inner">
      <nav class="site-foot__inner text-step-0">
        <span>© {currentYear}</span>
        <a href="/" aria-current="page">MurphyShark</a>
        <span>❤ powered by Astro</span>
      </nav>
      <nav id="social" class="site-foot__inner">
        <a href="" rel="me">
          <span class="sr-only">github</span>
          <div aria-hidden="true">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="24" 
              height="24" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              aria-hidden="true" 
              focusable="false"
            >
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35
               0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 
               0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </div>
        </a>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</footer>
