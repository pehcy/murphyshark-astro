---
import '../styles/global.css';
import ThemeToggle from "./ThemeToggle.astro";

const currentYear: number = new Date().getFullYear();
---

<footer class="site-footer mt-l-xl p-s-m">
  <div class="wrapper">
		<div class="cluster gutter-xs flex-col">
			<nav aria-label="Complementary" class="cluster">
				Â© {currentYear}
				<a href="/" class="font-logo | cluster"><b>MurphyShark</b></a>
			</nav>
			<nav aria-label="Social" class="cluster">
				<a href="/feed.xml" rel="alternate" type="application/atom+xml">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
            aria-hidden="true"
            ><path d="M4 11a9 9 0 0 1 9 9M4 4a16 16 0 0 1 16 16"></path><circle
              cx="5"
              cy="19"
              r="1"></circle></svg
          >
        </a>
				<a href="" rel="me">
          <span class="sr-only">github</span>
          <div aria-hidden="true">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
              focusable="false"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35
               0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 
               0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </div>
        </a>
			</nav>
			<nav aria-label="Theme" class="cluster" style="--gutter: 0.5em;">
				<h2 class="theme-toggle-label">Theme</h2>
				<ThemeToggle />
			</nav>
		</div>
    <div class="cluster gutter-xs mt-xl text-step-min-1">
      Made with <a href="https://astro.build/" class="link-underline">Astro</a> by MurphyShark (pehcy)
    </div>
	</div>
</footer>

<style>
	.site-footer {
		--cluster-horizontal-alignment: center;
	}

	.site-footer svg {
    block-size: 0.9em;
    inline-size: 0.9em;
  }

  .sr-only {
    clip: rect(0, 0, 0, 0);
    border-width: 0;
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

	.flex-col {
		display: flex;
		flex-direction: row;
		gap: 1rem;
	}

	@media only screen and (max-width: 640px) {
		.flex-col {
			display: flex;
			flex-direction: column;
		}
	}

	.theme-toggle-label {
		font-size: var(--size-step-min-1);
		margin: 0;
	}
</style>