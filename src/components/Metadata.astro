---
interface Props {
  title: string;
  description: string;
  image: string;
  canonicalUrl: string;
  type: 'website' | 'article';
  publishedTime?: string;
}
 
const { title, description, image, canonicalUrl, type, publishedTime } = Astro.props;
const defaultImageUrl: string = "/apple-touch-icon.png"
const isEmpty = (str: string) => (!str?.length);
---
 
<title>{title}</title>
<meta charset="UTF-8" />
<meta name="author" content="pehcy - MurphyShark" />
<meta name="title" content={title} />
<meta name="description" content={description} />
{
  publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
 
<link rel="canonical" href={canonicalUrl} />
 
<meta property="og:title" content={title} />
<meta property="og:site_map" content="MurphyShark" />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:image" content={!isEmpty(image) ? image : defaultImageUrl} />
<meta property="og:type" content={type} />
 
<meta name="twitter:card" content="MurphyShark" />
<meta name="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:image" content={!isEmpty(image) ? image : defaultImageUrl} />
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/favicon.svg" type="image/svg+xml">
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />